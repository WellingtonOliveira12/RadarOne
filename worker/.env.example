# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/radarone?schema=public"

# ============================================
# TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ============================================
# EMAIL (Resend)
# ============================================
# API key do Resend (obter em https://resend.com/api-keys)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Remetente do email
# IMPORTANTE: Para dominios customizados, verifique no Resend primeiro
# Para testes, use: onboarding@resend.dev
EMAIL_FROM="RadarOne <onboarding@resend.dev>"

# ============================================
# SESSION ENCRYPTION (REQUIRED for user sessions)
# ============================================
# Key used to encrypt/decrypt user authentication sessions (Facebook, ML, etc.)
# MUST be the same value in both backend AND worker environments
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Minimum: 32 characters
SESSION_ENCRYPTION_KEY=

# ============================================
# MERCADO LIVRE AUTH
# ============================================
# Sessao do ML em base64 (gere com: npm run ml:login && npm run ml:state:encode)
# ML_STORAGE_STATE_B64=eyJjb29raWVzIjpb...

# OU caminho para arquivo (Secret File no Render)
# ML_STORAGE_STATE_PATH=/etc/secrets/ml-storage-state.json

# ============================================
# WORKER SETTINGS
# ============================================
CHECK_INTERVAL_MINUTES=5

# ============================================
# SCRAPING SETTINGS
# ============================================
# Delay entre monitores (ms)
MONITOR_DELAY_MS=2000

# Delay entre requisicoes (ms)
REQUEST_DELAY_MS=3000

# Timeout de requisicao (ms)
REQUEST_TIMEOUT_MS=30000

# Numero maximo de retries
MAX_RETRIES=3

# ============================================
# PLAYWRIGHT
# ============================================
PLAYWRIGHT_BROWSERS_PATH=./pw-browsers
