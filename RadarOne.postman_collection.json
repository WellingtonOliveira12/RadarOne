          "listen": "test",
          "script": {
            "exec": [
              "// Ajuste aqui o nome do campo se o backend devolver 'accessToken' ao invés de 'token'.",
              "let json = pm.response.json();",
              "if (json.token) {",
              "  pm.environment.set('jwtToken', json.token);",
              "} else if (json.accessToken) {",
              "  pm.environment.set('jwtToken', json.accessToken);",
              "} else {",
              "  console.log('⚠️ Não encontrei campo token/accessToken na resposta. Ajuste o script de teste.');",
              "}"
            ],
            "type": "text/javascript"
