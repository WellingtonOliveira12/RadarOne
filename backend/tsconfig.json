{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["src/**/*", "scripts/run-migrations-safe.ts"],
  "exclude": ["node_modules", "dist"]
}
